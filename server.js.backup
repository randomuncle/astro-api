app.get('/v1/geocoding/smart-autocomplete', async (req, res) => {
  try {
    const { 
      q: query,
      limit = 6,
      country = null,
      context = 'general' // 'astrology', 'travel', 'general'
    } = req.query;
    
    if (!query || query.trim().length < 2) {
